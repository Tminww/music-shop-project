version: "3.7"

services:
  postgres:
    container_name: django-postgres
    image: postgres
    restart: unless-stopped
    ports:
      - "0.0.0.0:54321:5432"
    environment:
      - POSTGRES_DB=postgres
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
    volumes:
      - postgres-data:/var/lib/postgresql/data

  pgadmin:
    image: dpage/pgadmin4
    container_name: django-pgadmin
    restart: unless-stopped
    depends_on:
      - postgres
    ports:
      - "127.0.0.1:5500:80"
    environment:
      PGADMIN_DEFAULT_EMAIL: anton.korostelev2@gmail.com
      PGADMIN_DEFAULT_PASSWORD: X7z#52O4HdB
    volumes:
      - pgadmin-data:/var/lib/pgadmin

  backend:
    build: ./backend/
    command: python manage.py runserver 0.0.0.0:8000
    container_name: django-backend
    restart: unless-stopped
    depends_on:
      - postgres
    ports:
      - "8000:8000"



volumes:
  postgres-data:
  pgadmin-data:
